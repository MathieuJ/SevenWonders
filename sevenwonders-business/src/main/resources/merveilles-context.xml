<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:util="http://www.springframework.org/schema/util" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-3.0.xsd">

	<util:list id="listeMerveilles" value-type="fr.mathieujjava.sevenwonders.Merveille" list-class="java.util.ArrayList">
		<bean id="merveille1" class="fr.mathieujjava.sevenwonders.Merveille">
			<constructor-arg name="nomEn" value="The Colossus of Rhodes" />
			<constructor-arg name="nomFr" value="Le Colosse de Rhodes" />
			<constructor-arg name="face" value="1" />
			<constructor-arg name="texte" value="1er étage : 3 points de victoire; 2d étage : Fournit 2 puissance militaire; 3ème étage : 7 points de victoire" />
			<constructor-arg name="ressource" value="Minerai" />
			<constructor-arg name="couts" value="BB,QQQ,MMMM" />
			<constructor-arg name="image" value="colosse.jpg" />
		</bean>

		<bean id="merveille2" class="fr.mathieujjava.sevenwonders.Merveille">
			<constructor-arg name="nomEn" value="The Lighthouse of Alexandria" />
